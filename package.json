{
  "name": "@outburn/fume-mapping-provider",
  "version": "1.0.0",
  "description": "Manage pre-defined, named FUME expressions (mappings) from FHIR packages, servers, or files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.ts'",
    "test:integration": "jest --config jest.integration.config.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "test:stop-hapi": "docker stop fume-mapping-provider-test-hapi"
  },
  "keywords": [
    "fume",
    "fhir",
    "mapping",
    "structuremap",
    "expression"
  ],
  "author": "Outburn Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Outburn-IL/fume-mapping-provider.git"
  },
  "devDependencies": {
    "@outburn/fhir-client": "^1.4.0",
    "@outburn/types": "^0.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "docker-compose": "^1.3.1",
    "eslint": "^9.39.2",
    "fhir-package-explorer": "^1.9.1",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
